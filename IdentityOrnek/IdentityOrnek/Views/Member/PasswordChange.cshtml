
 @model PasswordChangeViewModel

<h1>Şifre yenileme </h1>

@if(TempData["SuccessMessage"]!=null)
{
    <div class="alert alert-info" role="alert">
        @TempData["SuccessMessage"]
    </div>
}


<div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

<form asp-controller="Member" asp-action="PasswordChange" method="post">
    <div class="row mb-3"> 
        <label for="PasswordConfirm" class="col-md-4 col-form-label" asp-for="PasswordOld"></label>
        <div class="col-md-8">
            <input  asp-for="PasswordOld" class="form-control"/>
            <span class="text-danger" asp-validation-for="PasswordOld"></span>
        </div>
        <label for="PasswordConfirm" class="col-md-4 col-form-label" asp-for="PasswordNew"></label>
        <div class="col-md-8">
            <input asp-for="PasswordNew" class="form-control" />
            <span class="text-danger" asp-validation-for="PasswordNew"></span>
        </div>
        <label for="PasswordConfirm" class="col-md-4 col-form-label" asp-for="PasswordConfirm"></label>
        <div class="col-md-8">
            <input asp-for="PasswordConfirm" class="form-control" />
            <span class="text-danger" asp-validation-for="PasswordConfirm"></span>
        </div>

        <div  class="row mb-3">
            <div class="col-md-8 offset-md-4">
                <button type="submit" class="btn btn-primary">Şifre sıfırla</button>
            </div>
        </div>
    </div>
</form>