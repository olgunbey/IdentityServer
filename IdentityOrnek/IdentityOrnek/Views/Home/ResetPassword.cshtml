@model ResetPasswordModel

<div class="row">
    <div class="col-md-4 offset-md-4">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-info">@TempData["SuccessMessage"]</div>
        }






        <div class="alert alert-info">Şifre yenileme linki emaile gönderilecek</div> 
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert" >
        </div>

        <form asp-action="ResetPassword" asp-controller="Home" method="post">
            <div class="mb-3">
                <label for="Email" class="form-label" asp-for="EMail"></label>
                <input asp-for="EMail"  class="form-control"/>
                <span class="text-danger" asp-validation-for="EMail"></span>
            </div>
            <button type="submit" class="btn btn-primary">Gönder</button>
        </form>

    </div>

</div>