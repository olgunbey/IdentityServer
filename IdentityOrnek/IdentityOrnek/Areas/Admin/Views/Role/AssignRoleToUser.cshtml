 @model List<AssignRoleToUserModelView>

     <div class="row">
         <h2>Kullanıcıya rol atama</h2>
    <form asp-action="AssignRoleToUser" method="post" asp-route-userId="@ViewBag.userId">
        @for(int i=0;i<Model.Count;i++)
        {
            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="exampleCheck1" asp-for="@Model[i].Exist">
                <label class="form-check-label" for="exampleCheck1">@Model[i].RoleName</label>
                <input type="hidden" asp-for="@Model[i].RoleName"/>
                <input type="hidden" asp-for="@Model[i].Id"/>
            </div>
        }
        <div class="form-group mt-3">
            <input type="submit" value="Oluştur" class="btn btn-primary" />

        </div>
         </form>
         <div class="mt-3">
             <a asp-action="UserList" asp-controller="Home">Kullanıcı listesine geri dön</a>

         </div>


     </div>